include $(SRCDIR)/config/aros.cfg

USER_CFLAGS := -noposixc
USER_CPPFLAGS = -DADATE="\"$(shell date '+%d.%m.%Y')\""
CUNITEXEDIR := $(AROS_TESTS)/cunit/dos

EXEDIR          := $(AROS_TESTS)/dos

FILES := \
    addpart \
    clicreatenewproc \
    consolemodes \
    doslist \
    dosvartest \
    examine \
    examinefh \
    exnext \
    filetest \
    fread \
    fstest \
    getenv \
    inhibit \
    isinteractive \
    match \
    matchtest \
    minicat \
    mountlist \
    namefromfh \
    nil \
    notify \
    openfromlock \
    output \
    r \
    rawtest \
    readargs \
    readitem \
    readitemloop \
    runcommand \
    rwverify \
    scantest \
    scanvarstest \
    seektest \
    setfiledate \
    setenv \
    setfilesize \
    strtodate \
    systemtags \
    systemtags_slave \
    systemtags2 \
    systemtags2_slave \
    waitforchar

PURE_FILES := \
    exit \
    isfilesystem

CUNITDOSTESTFILES := \
    cunit-dos-createnewproc \
    cunit-dos-fileseek \
    cunit-dos-readargs \
    cunit-dos-samelock \
    cunit-dos-systemtags \
    cunit-dos-systemtags-stack-slave

CUNITDOSSCMTESTFILES := \
    cunit-dos-smallcodemodel

#MM- test : test-dos
#MM- test-quick : test-dos-quick

#MM- test-dos : test-dos-common test-dos-pure test-dos-cunit test-dos-cunit-$(CPU)-smallcodemodel
#MM- test-dos-quick : test-dos-common-quick test-dos-pure-quick test-dos-cunit-quick test-dos-cunit-$(CPU)-smallcodemodel-quick

#MM- test-cunit : test-dos-cunit test-dos-cunit-$(CPU)-smallcodemodel
#MM- test-cunit-quick : test-dos-cunit-quick test-dos-cunit-$(CPU)-smallcodemodel-quick

#MM test-dos-common : includes linklibs

#MM test-dos-cunit : linklibs-cunit

%build_progs mmake=test-dos-common \
    files=$(FILES) targetdir=$(EXEDIR)

%build_progs mmake=test-dos-pure \
    files=$(PURE_FILES) targetdir=$(EXEDIR) \
    usestartup="no"

USER_CFLAGS := $(CFLAGS_NO_BUILTIN)

%build_progs mmake=test-dos-cunit \
    files=$(CUNITDOSTESTFILES) targetdir=$(CUNITEXEDIR) \
    uselibs="cunit"

USER_CFLAGS := $(CFLAGS_NO_BUILTIN) -mcmodel=small

%build_progs mmake=test-dos-cunit-x86_64-smallcodemodel \
    files=$(CUNITDOSSCMTESTFILES) targetdir=$(CUNITEXEDIR) \
    uselibs="cunit"

%common
