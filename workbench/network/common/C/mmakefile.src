#MM     arostcp-linklibs-miami

BASEFILES := \
    arp \
    ping \
    route \
    resolve

MIAMIFILES := \
    hostname \
    ifconfig \
    logger

%build_progs mmake=workbench-network-common-c-base \
    files="$(BASEFILES)" \
    targetdir=$(AROS_C) uselibs="net" usesdks="config network"

%build_progs mmake=workbench-network-common-c-miami \
    files="$(MIAMIFILES)" \
    targetdir=$(AROS_C) uselibs="miami net" usesdks="config network"

