show_selection ()
{
    printf "    1) toolchain-alt-abiv0-i386\n"
    printf "    2) alt-abiv0-pc-i386\n"
    printf "    3) alt-abiv0-linux-i386 (DEBUG)\n"
    printf "    4) alt-abiv0-linux-i386\n"
    printf "    5) alt-abiv0-mingw32-i386\n"
    printf "    6) alt-abiv0-contrib-i386\n"
}

process_selection ()
{
    case $1 in
        1)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/toolchain-alt-abiv0-i386-build
        TOOLCHAIN_BUILD=yes
        CONFIGURE_TARGET=linux-i386
        MAKE_TARGET="-s crosstools"
        ;;
        2)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/alt-abiv0-pc-i386
        CONFIGURE_TARGET=pc-i386
        CONFIGURE_OPTS="--with-aros-toolchain=yes"
        MAKE_TARGET_2="bootiso"
        ;;
        3)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/alt-abiv0-linux-i386-d
        CONFIGURE_TARGET=linux-i386
        CONFIGURE_OPTS="--with-aros-toolchain=yes --enable-debug"
        ;;
        4)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/alt-abiv0-linux-i386
        CONFIGURE_TARGET=linux-i386
        CONFIGURE_OPTS="--with-aros-toolchain=yes"
        ;;
        5)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/alt-abiv0-mingw32-i386
        CONFIGURE_TARGET=mingw32-i386
        CONFIGURE_OPTS="--with-aros-toolchain=yes"
        ;;
        6)
        TOOLCHAIN_DIR=$(pwd)/toolchain-alt-abiv0-i386
        BUILD_DIR=$(pwd)/alt-abiv0-contrib-i386
        CONFIGURE_TARGET=linux-i386
        CONFIGURE_OPTS="--with-aros-toolchain=yes"
        MAKE_TARGET="tools"
        MAKE_TARGET_2="mmake"
        MAKE_TARGET_3="contrib"
    esac
}

