USER_LDFLAGS := -noclibs

#MM kernel-hidd-acpithermal : kernel-hidd-telemetry-includes

%build_module mmake=kernel-hidd-acpithermal \
    modname=acpithermal modtype=hidd \
  files="$(FILES)" uselibs=acpica sdk=private usesdks="private"

INCLUDE_FILES    := $(call WILDCARD, include/*.h)

%copy_includes path=hidd dir=include sdk=private

%common
